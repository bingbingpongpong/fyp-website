<!DOCTYPE html>
<html>
<head><title>MiniShop</title></head>
<body>
  <h1>Welcome <%= user ? user : 'Guest' %></h1>
  <% if (!user) { %><a href="/login">Login</a><% } %>
  <h2>Products</h2>
  <ul>
    <% products.forEach(p => { %>
      <li><a href="/product/<%= p.id %>"><%= p.name %></a> - $<%= p.price %></li>
    <% }) %>
  </ul>
</body>
</html>
